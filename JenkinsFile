pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/YOUR_GITHUB_USER/WebApp.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building the application..."
            }
        }

        stage('Deploy to IIS') {
            steps {
                script {
                    def iisPath = "C:\\inetpub\\wwwroot\\WebApp"
                    bat "rmdir /S /Q ${iisPath}"
                    bat "mkdir ${iisPath}"
                    bat "xcopy /E /I /Y . ${iisPath}"
                }
            }
        }

        stage('Restart IIS') {
            steps {
                bat "iisreset"
            }
        }
    }
}
